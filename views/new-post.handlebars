<form class='container-fluid mt-5 blog-container' id='new-post-form' data-user-id='{{userId}}'>
    <div class='mb-3'>
        <label for='blog-title' class='form-label'>Title:</label>
        <input type='text' class='form-control' id='blog-title'>
    </div>
    <div class='mb-3'>
        <label for='blog-content' class='form-label'>Post:</label>
        <textarea cols='150' rows='10' class='form-control' id='blog-content'></textarea>
    </div>
    <div class='container-fluid mt-5 custom-button'>
        <button type='submit' class='btn btn-primary'>Submit</button>
    </div>
</form>

<script src='./js/post.js'></script>